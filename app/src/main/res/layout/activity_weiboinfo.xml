<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f7941d">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_white_back"
            android:onClick="back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="动态详情" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/img_weiboinfo_headphoto"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:id="@+id/txt_weiboinfo_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/img_weiboinfo_headphoto"
                android:text="用户名" />

            <TextView
                android:id="@+id/txt_weiboinfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/img_weiboinfo_headphoto"
                android:text="发布时间" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="+关注" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_weiboinfo_body"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"
            android:text="微博正文" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@mipmap/block_answer" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@mipmap/block_answer" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@mipmap/block_answer" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@mipmap/block_answer" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="评论数" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_activity_weiboinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
